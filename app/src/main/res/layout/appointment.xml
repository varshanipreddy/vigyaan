<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointment Registration"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="59dp"
        android:textColor="@color/colorAccent"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorAccentDark"

        />




        <EditText
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@color/translucent"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:inputType="text"
            android:layout_marginLeft="80dp"
            android:textColor="@color/colorAccentDark"
            android:id="@+id/TFusername"



            />
        <!--ctrl shift ? to leave a comment.....
        alt enter to send the text into string-->

        <!--maximum text size is 26sp preferable...and minimum 12sp-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="password"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorAccentDark"
        android:textSize="20sp"



        />


    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="@color/translucent"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorAccentDark"


        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:id="@+id/TFpassword"
                 />
        <!--sp only for  text sizes....dp for the rest-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="suffering from(optional)"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorAccentDark"



        />


    <EditText
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="@color/translucent"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorAccentDark"



        android:layout_marginTop="5dp"
        android:inputType="text"
        android:id="@+id/TFdisease"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentlight"
        android:text="Generate token"
        android:textColor="@color/colorAccentDark"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:onClick="onButtonClick"
        android:id="@+id/login"

        />

    <Button
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:background="@color/colorAccentlight"
        android:text="Sign up here"
        android:textColor="@color/colorAccentDark"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="30dp"
        android:id="@+id/signuphere"
        android:onClick="onButtonClick"

        />


</LinearLayout>
